<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorView">

    <TableLayout
        android:id="@+id/buttonTable"
        android:layout_width="325dp"
        android:layout_height="198dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/functionsTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="7"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="8"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="9"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonDel"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="←"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="198dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="4"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="5"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="6"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonOK"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="OK"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="107dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="1"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="2"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="="
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />
        </TableRow>

        <TableRow
            android:layout_width="214dp"
            android:layout_height="61dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="0"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/button00"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="00"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonPoint"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="."
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonAc"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="AC"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/functionsTable"
        android:layout_width="353dp"
        android:layout_height="159dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTable"
        app:layout_constraintVertical_bias="0.04">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonSubt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonMult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonSin"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="SIN"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonCos"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="COS"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonTan"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:text="TAN"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonSign"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+/-"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonSqrt"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="√"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />

            <Button
                android:id="@+id/buttonPow"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="X^y"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="186dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TextView
        android:id="@+id/operation"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/answerText"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/buttonTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/operation"
        app:layout_constraintVertical_bias="0.26" />

</android.support.constraint.ConstraintLayout>